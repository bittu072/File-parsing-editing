
config wifi-device 'radio0'
        option htmode 'HT40-'
        option channel '11'
        option hwmode '11ng'
        option disabled '0'
        option noscan 1

config wifi-iface 'ap_0'
	option device 'radio0'
	option ifname 'wlan0'
	option network 'lan'
	option mode 'ap'
	option hidden '0'
	option maxassoc '30'
	**ap_activation**
	**ap_ssid**
	option encryption 'psk2'
	**ap_passw**

config wifi-iface 'ah_0'
	option device 'radio0'
	option ifname 'wlan0-1'
	option network 'mesh_0'
	option bssid '12:34:56:AB:CD:DE'
	option ssid 'ssid'
	option encryption 'none'
	#option key ''
	option mode 'adhoc'
	option hidden '1'
	option disabled '1'

config wifi-iface 'sta_0'
	option device 'radio0'
	option ifname 'wlan0-2'
	option mode 'sta'
	option network 'wwan'
	**sta_activation**
	**sta_ssid**
	**sta_protocol**
	**sta_passw**

config odhcpd 'odhcpd'
        option maindhcp '0'
        option leasefile '/tmp/hosts/odhcpd'
        option leasetrigger '/usr/sbin/odhcpd-update'
        option readethers '1'
